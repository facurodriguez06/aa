<body>
  <div id="merrywrap" class="merrywrap">
    <canvas id="snowfall"></canvas>
    <div class="giftbox">
      <div class="cover"><div></div></div>
      <div class="box"></div>
    </div>
    <img id="imagenFinal" src="1.jpg" alt="Feliz cumpleaños" />
    <div class="icons"></div>
  </div>
  <canvas id="particles"></canvas>
  <div id="hearts"></div>

  <audio id="birthdayAudio" src="cumple.mp3"></audio>

  <script>
    window.onload = function () {
      const merrywrap = document.getElementById("merrywrap");
      const box = merrywrap.getElementsByClassName("giftbox")[0];
      const imagen = document.getElementById("imagenFinal");
      const audio = document.getElementById("birthdayAudio");
      let step = 1;
      const stepMinutes = [2000, 1500, 1000, 1000];

      box.addEventListener("click", openBox, false);

      function stepClass(step) {
        merrywrap.className = "merrywrap step-" + step;
      }

      function openBox() {
        if (step === 1) {
          box.removeEventListener("click", openBox, false);
          audio.play().catch(e => console.warn("No se pudo reproducir el audio:", e));
        }

        stepClass(step);

        if (step === 2) {
          const rect = box.getBoundingClientRect();
          const centerX = rect.left + rect.width / 2;
          const centerY = rect.top + rect.height / 2;
          burstParticles(centerX, centerY);
          setTimeout(() => burstParticles(centerX + 50, centerY - 100), 400);
          spawnHearts(60);
        }

        if (step === 3) {
          document.querySelector(".icons").style.display = "none";
          imagen.style.display = "block";
          void imagen.offsetWidth; // fuerza el reflow para reiniciar animación
          imagen.style.animation = "fadeIn 1s ease forwards";
          imagen.classList.add("glow");
          spawnSparkles(imagen);
        }

        if (step === 4) return;
        setTimeout(openBox, stepMinutes[step - 1]);
        step++;
      }

      const canvas = document.getElementById("particles");
      const ctx = canvas.getContext("2d");
      let particles = [];

      function resizeCanvas() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      }
      resizeCanvas();
      window.addEventListener("resize", resizeCanvas);

      function createParticle(x, y) {
        const angle = Math.random() * 2 * Math.PI;
        const speed = Math.random() * 8 + 2;
        return {
          x,
          y,
          dx: Math.cos(angle) * speed,
          dy: Math.sin(angle) * speed,
          life: 200 + Math.random() * 100,
          radius: Math.random() * 5 + 3,
          color: `hsl(${Math.random() * 360}, 100%, 70%)`,
        };
      }

      function animateParticles() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        particles.forEach((p, i) => {
          p.x += p.dx;
          p.y += p.dy;
          p.life--;
          ctx.fillStyle = p.color;
          ctx.beginPath();
          ctx.arc(p.x, p.y, p.radius, 0, Math.PI * 2);
          ctx.fill();
          if (p.life <= 0) particles.splice(i, 1);
        });
        requestAnimationFrame(animateParticles);
      }
      animateParticles();

      function burstParticles(x, y) {
        for (let i = 0; i < 300; i++) {
          particles.push(createParticle(x, y));
        }
      }

      function spawnHearts(count) {
        const hearts = document.getElementById("hearts");
        for (let i = 0; i < count; i++) {
          const heart = document.createElement("div");
          const direction = Math.random() > 0.5 ? 'up' : 'down';
          heart.className = direction === 'up' ? "heart-up" : "heart-down";
          heart.innerHTML = "❤️";
          heart.style.left = Math.random() * 100 + "vw";
          heart.style.fontSize = Math.random() * 25 + 25 + "px";
          heart.style.animationDuration = Math.random() * 4 + 6 + "s";
          heart.style.top = direction === 'down' ? "-80px" : "100vh";
          hearts.appendChild(heart);
          setTimeout(() => heart.remove(), 12000);
        }
      }

      function spawnSparkles(img) {
        for (let i = 0; i < 10; i++) {
          const sparkle = document.createElement("div");
          sparkle.className = "sparkle";
          const rect = img.getBoundingClientRect();
          sparkle.style.left = rect.left + Math.random() * rect.width + "px";
          sparkle.style.top = rect.top + Math.random() * rect.height + "px";
          document.body.appendChild(sparkle);
          setTimeout(() => sparkle.remove(), 1000);
        }
      }
    };
  </script>
</body>
</html>
